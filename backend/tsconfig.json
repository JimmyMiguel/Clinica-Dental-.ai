{
    "compilerOptions": {
      /* Configuraci칩n Base */
      "target": "ES2022",
      "module": "nodeNext",
      "rootDir": "./src",
      "outDir": "./dist",
      "moduleResolution": "nodeNext",
      "lib": ["dom", "es2023"], // Acepta la resoluci칩n de m칩dulos moderna y cl치sica
      
      /* ESTO ES LO QUE ARREGLA TU ERROR */
      "baseUrl": "./src",
      "paths": {
        "@database/*": ["database/*"],
        "@config/*": ["config/*"],
        "@agent/*": ["agent/*"]
      },
  
      /* Reglas estrictas */
      "strict": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }